<div class='container'>
  <div class='row'>
    <ol class='col-xs-12 col-sm-3'>
      <% @names.each do |name| %>
        <% className ='Name' %>
        <% if name[4] then className += ' Accepted'; elsif (name[4] == false) then className += ' Rejected'; end %>
        <li class='<%= className %>' data-id='<%= name[0] %>'><%= name[2].blank? ? "#{ name[1] } #{ name[3] }" : "#{ name [1] } '#{ name[2] }' #{ name[3] }" %></li>
      <% end %>
    </ol>
    <div class='col-xs-12 col-sm-9'>
      <div id='card'>
      </div>
      <div id='buttons'>
        <button class='btn btn-lg btn-danger' id='rejectButton'><span class='fa fa-close'></span></button>
        <button class='btn btn-lg btn-success' id='acceptButton'><span class='fa fa-check'></span></button>
      </div>
    </div>
  </div>
</div>

<%= render 'partials/footer' %>

<%= javascript_include_tag 'summary', 'data-turbolinks-track' => true %>